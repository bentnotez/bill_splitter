{% extends 'base.jinja2' %}

{% block subtitle %}New Bill{% endblock subtitle %}

{% block content %}
    <p>Enter bill name and bill amount, then click submit</p>
    <form method="POST">
        <label for="name">Name:</label><input type="text" id="name" name="name">
        <label for="amount">Amount</label><input type="number" id="amount" name="amount">
        <label for="first_day">First Day</label><input type="text" id="first_day" name="first_day">
        <label for="last_day">Last Day</label><input type="text" id="last_day" name="last_day">
        <input type="submit" value="submit">
    </form>
{% endblock content %}